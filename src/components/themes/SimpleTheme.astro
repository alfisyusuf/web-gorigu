import { urlFor } from "../../utils/image";

const { data } = Astro.props;

// --- 1. LOGIC DATA & TIMEZONE ---
const isPriaFirst = data.nameOrder !== 'wanitaFirst';
const namaPertama = isPriaFirst ? data.priaNickname : data.wanitaNickname;
const namaKedua = isPriaFirst ? data.wanitaNickname : data.priaNickname;
const tanggalAkad = new Date(data.akadDate).toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' });

// --- 2. LOGIC GAMBAR ---
const coverUrl = data.coverImage 
  ? urlFor(data.coverImage).width(800).height(1200).url() 
  : 'https://placehold.co/800x1200/222/fff?text=Cover';

const priaFotoUrl = data.priaFoto ? urlFor(data.priaFoto).width(500).height(500).url() : 'https://placehold.co/500';
const wanitaFotoUrl = data.wanitaFoto ? urlFor(data.wanitaFoto).width(500).height(500).url() : 'https://placehold.co/500';

// --- 3. LOGIC SWAPPING ---
const groomData = { name: data.priaName, nickname: data.priaNickname, parents: data.priaParents, ig: data.priaIg, foto: priaFotoUrl, label: 'Putra dari' };
const brideData = { name: data.wanitaName, nickname: data.wanitaNickname, parents: data.wanitaParents, ig: data.wanitaIg, foto: wanitaFotoUrl, label: 'Putri dari' };

const first = isPriaFirst ? groomData : brideData;
const second = isPriaFirst ? brideData : groomData;

// --- 4. BACKGROUND LUXURY (Vignette Effect) ---
// Tengah agak terang (supaya wajah kelihatan), pinggir hitam pekat.
const backgroundStyle = `
    background-image: 
    radial-gradient(circle at center, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.8) 70%, rgba(0,0,0,1) 100%),
    url('${coverUrl}');
`;
---

<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Wedding of {namaPertama} & {namaKedua}</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;1,400&family=Poppins:wght@300;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* --- VARIABLE WARNA (THEME CONFIG) --- */
        :root {
            --gold: #d4af37;        /* Emas Utama */
            --gold-light: #f3e5ab;  /* Emas Muda */
            --gold-dark: #aa8c2c;   /* Emas Tua */
            --dark: #1a1a1a;        /* Hitam Pekat */
            --text-grey: #666;
            --bg-light: #f9f9f9;
        }

        /* RESET & BASE */
        * { box-sizing: border-box; }
        body { margin: 0; font-family: 'Poppins', sans-serif; background-color: var(--dark); color: #333; overflow: hidden; }

        /* SCROLL SNAP CONTAINER */
        .app-container {
            height: 100vh;
            height: 100dvh;
            width: 100%;
            overflow-y: hidden; /* Terkunci awal */
            scroll-snap-type: y mandatory;
            scroll-behavior: smooth;
            position: relative;
            background: #fff;
        }
        .app-container.unlocked { overflow-y: scroll; }

        /* SECTIONS */
        section {
            height: 100vh;
            height: 100dvh;
            width: 100%;
            scroll-snap-align: start;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px 20px 90px 20px; /* Padding bawah extra untuk Nav */
            position: relative;
            background: white;
            text-align: center;
            overflow: hidden;
        }

        /* ANIMATION: FADE UP (Biar smooth kayak App) */
        .animate-up {
            opacity: 0;
            transform: translateY(30px);
            transition: all 1s ease-out;
        }
        section.in-view .animate-up {
            opacity: 1;
            transform: translateY(0);
        }

        /* THEME CLASSES */
        .bg-dark { background: var(--dark); color: white; }
        .bg-light { background: var(--bg-light); }
        .bg-pattern { 
            background-color: #ffffff; 
            background-image: radial-gradient(#e0e0e0 1px, transparent 1px); 
            background-size: 20px 20px; 
        }

        .container { max-width: 500px; width: 100%; }

        /* TYPOGRAPHY */
        h1 { font-family: 'Playfair Display', serif; font-size: 3rem; margin: 0; line-height: 1.2; }
        h2 { font-family: 'Playfair Display', serif; font-size: 2rem; margin-bottom: 20px; color: var(--gold-dark); }
        p { font-size: 0.95rem; line-height: 1.6; margin-bottom: 15px; }

        /* 1. COVER STYLE (REQUEST BAPAK) */
        #cover {
            background-size: cover;
            background-position: center;
            /* Warna Emas Mewah */
            color: var(--gold-light); 
            /* Text Shadow agar terbaca di background hitam */
            text-shadow: 1px 1px 2px rgba(0,0,0,0.8), 0 0 20px rgba(212, 175, 55, 0.4);
            padding-bottom: 20px;
        }
        /* Override h2 di cover biar emas terang */
        #cover h3 { color: white; font-weight: 300; font-size: 1.2rem; }

        /* BUTTONS (GRADIENT GOLD) */
        .btn-open { 
            margin-top: 30px; 
            background: linear-gradient(135deg, var(--gold) 0%, var(--gold-light) 100%);
            color: var(--dark); 
            border: none; padding: 12px 35px; border-radius: 50px; 
            font-weight: bold; cursor: pointer; display: flex; align-items: center; gap: 8px; 
            box-shadow: 0 4px 15px rgba(212, 175, 55, 0.4); 
            z-index: 10; transition: transform 0.3s; 
        }
        .btn-open:active { transform: scale(0.95); }
        
        /* COUNTDOWN */
        .countdown-box { display: flex; gap: 8px; margin-top: 20px; justify-content: center; }
        .cd-item { background: rgba(0,0,0,0.6); padding: 8px 10px; border-radius: 8px; min-width: 55px; border: 1px solid rgba(255,255,255,0.1); }
        .cd-num { font-size: 1.1rem; font-weight: bold; display: block; color: var(--gold); }
        .cd-label { font-size: 0.55rem; text-transform: uppercase; color: #ccc; }

        /* MEMPELAI & EVENT CARD */
        .mempelai-img { width: 180px; height: 180px; border-radius: 50%; object-fit: cover; border: 4px solid var(--gold); margin-bottom: 20px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); }
        .ig-link { background: #eee; padding: 5px 15px; border-radius: 20px; text-decoration: none; color: #333; font-size: 0.8rem; display: inline-block; margin-top: 10px; transition: background 0.3s; }
        .ig-link:hover { background: var(--gold-light); }

        .event-box { background: white; padding: 30px; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.05); width: 100%; border: 1px solid rgba(212, 175, 55, 0.2); }
        .btn-maps { background: var(--dark); color: white; padding: 10px 25px; border-radius: 50px; text-decoration: none; display: inline-block; margin-top: 20px; font-size: 0.9rem; }

        /* CUSTOM SCROLLBAR (Saran AI Lain) */
        .gallery-grid, .story-scroll, .gift-scroll, .bottom-nav {
            scrollbar-width: thin;
            scrollbar-color: var(--gold) #f0f0f0;
        }
        ::-webkit-scrollbar { width: 4px; height: 4px; }
        ::-webkit-scrollbar-thumb { background: var(--gold); border-radius: 10px; }
        
        .gallery-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 10px; width: 100%; height: 60vh; overflow-y: auto; padding-right: 5px; }
        .gallery-img { width: 100%; height: 150px; object-fit: cover; border-radius: 8px; }

        .story-scroll { height: 60vh; overflow-y: auto; width: 100%; padding: 0 10px; text-align: left; }
        .story-item { border-left: 2px solid var(--gold); padding-left: 20px; margin-bottom: 30px; position: relative; }
        .story-item::before { content: ''; position: absolute; left: -6px; top: 0; width: 10px; height: 10px; background: var(--dark); border-radius: 50%; border: 2px solid var(--gold); }
        .story-year { font-weight: bold; font-size: 1.2rem; font-family: 'Playfair Display'; display: block; margin-bottom: 5px; color: var(--gold-dark); }

        /* GIFT */
        .gift-scroll { height: 60vh; overflow-y: auto; width: 100%; padding: 5px; }
        .bank-card { background: #fff; padding: 20px; border-radius: 12px; border: 1px solid #eee; margin-bottom: 15px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); }
        .rek-number { font-family: monospace; font-size: 1.3rem; font-weight: bold; margin: 5px 0; display: block; color: var(--dark); letter-spacing: 1px; }
        .btn-copy { background: var(--bg-light); border: 1px solid #ccc; padding: 5px 15px; border-radius: 15px; font-size: 0.8rem; cursor: pointer; color: #555; }
        .address-card { background: #fffdf5; padding: 20px; border-radius: 12px; border: 1px solid var(--gold); margin-top: 20px; color: #555; font-size: 0.9rem; }

        /* NAVIGATION BAR (GLASSMORPHISM) */
        .bottom-nav {
            position: fixed; bottom: 20px; left: 50%; transform: translateX(-50%);
            width: 90%; max-width: 400px;
            background: rgba(255, 255, 255, 0.85); backdrop-filter: blur(12px);
            border-radius: 50px; padding: 10px 15px;
            display: flex; gap: 20px; overflow-x: auto;
            box-shadow: 0 5px 25px rgba(0,0,0,0.1); border: 1px solid rgba(255,255,255,0.3);
            z-index: 100; opacity: 0; pointer-events: none; transition: opacity 0.5s;
        }
        .nav-item {
            display: flex; flex-direction: column; align-items: center; justify-content: center;
            min-width: 55px; text-decoration: none; color: #999; font-size: 0.65rem;
            transition: all 0.3s; flex-shrink: 0; cursor: pointer;
        }
        .nav-item i { font-size: 1.2rem; margin-bottom: 4px; }
        /* Active State Gold */
        .nav-item.active { color: var(--gold-dark); transform: scale(1.1); font-weight: bold; }

        /* MUSIC TOGGLE */
        .music-toggle {
            position: fixed; top: 20px; right: 20px; width: 40px; height: 40px;
            background: rgba(255, 255, 255, 0.8); backdrop-filter: blur(5px);
            border-radius: 50%; display: flex; align-items: center; justify-content: center;
            z-index: 200; box-shadow: 0 4px 10px rgba(0,0,0,0.2); cursor: pointer;
            border: 1px solid var(--gold); opacity: 0; transition: opacity 0.5s; pointer-events: none;
            color: var(--gold-dark);
        }
        .music-icon-spin { animation: spin 3s linear infinite; }
        @keyframes spin { 100% { transform: rotate(360deg); } }

    </style>
</head>
<body>

    <div class="app-container" id="app">
        
        <section id="cover" style={backgroundStyle}>
            <div class="animate-up">
                <p style="letter-spacing: 3px; font-size: 0.9rem; margin-bottom: 10px; opacity: 0.9;">THE WEDDING OF</p>
                <h1>{namaPertama}<br><span style="font-size: 2rem; font-style: italic; color: white;">&</span><br>{namaKedua}</h1>
                <p style="margin-top: 15px; color: white;">{tanggalAkad}</p>

                <div class="countdown-box" id="countdown">
                    <div class="cd-item"><span class="cd-num" id="d">0</span><span class="cd-label">Hari</span></div>
                    <div class="cd-item"><span class="cd-num" id="h">0</span><span class="cd-label">Jam</span></div>
                    <div class="cd-item"><span class="cd-num" id="m">0</span><span class="cd-label">Menit</span></div>
                    <div class="cd-item"><span class="cd-num" id="s">0</span><span class="cd-label">Detik</span></div>
                </div>

                <div style="margin-top: 30px; background: rgba(255,255,255,0.1); backdrop-filter: blur(5px); padding: 15px; border-radius: 12px; width: 80%; max-width: 400px; border: 1px solid rgba(255,255,255,0.2);">
                    <small style="color: #ddd;">Kepada Yth:</small>
                    <h3 id="nama-tamu" style="margin: 5px 0 0 0;">Tamu Undangan</h3>
                </div>

                <button class="btn-open" id="tombol-buka">
                    üíå Buka Undangan
                </button>
            </div>
        </section>

        <section id="ayat" class="bg-pattern">
            <div class="container animate-up">
                <i class="fas fa-heart" style="color: var(--gold); font-size: 2rem; margin-bottom: 20px;"></i>
                <p style="font-style: italic; font-size: 1.1rem; color: #555;">
                    "{data.quote || 'Dan di antara tanda-tanda (kebesaran)-Nya ialah Dia menciptakan pasangan-pasangan untukmu dari jenismu sendiri...'}"
                </p>
                <p style="font-weight: bold; margin-top: 10px; color: var(--gold-dark);">(QS. Ar-Rum: 21)</p>
            </div>
        </section>

        <section id="mempelai1" class="bg-light">
            <div class="container animate-up">
                <img src={first.foto} class="mempelai-img" alt={first.name}>
                <h2>{first.nickname}</h2>
                <p style="font-size: 1.2rem; font-weight: bold; margin: 0;">{first.name}</p>
                <p style="color: #777;">{first.label} {first.parents}</p>
                {first.ig && <a href={`https://instagram.com/${first.ig}`} target="_blank" class="ig-link"><i class="fab fa-instagram"></i> @{first.ig}</a>}
            </div>
        </section>

        <section id="mempelai2" class="bg-light">
            <div class="container animate-up">
                <img src={second.foto} class="mempelai-img" alt={second.name}>
                <h2>{second.nickname}</h2>
                <p style="font-size: 1.2rem; font-weight: bold; margin: 0;">{second.name}</p>
                <p style="color: #777;">{second.label} {second.parents}</p>
                {second.ig && <a href={`https://instagram.com/${second.ig}`} target="_blank" class="ig-link"><i class="fab fa-instagram"></i> @{second.ig}</a>}
            </div>
        </section>

        <section id="akad" class="bg-pattern">
            <div class="container animate-up">
                <div class="event-box">
                    <h2>Akad Nikah</h2>
                    <p style="font-size: 3rem; margin: 0;">üíç</p>
                    <p style="font-weight: bold; font-size: 1.2rem; margin-top: 10px;">
                        {new Date(data.akadDate).toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' })}
                    </p>
                    <p>üïó {data.akadTimeManual ? data.akadTimeManual : new Date(data.akadDate).toLocaleTimeString('id-ID', {hour: '2-digit', minute:'2-digit', timeZone: 'Asia/Jakarta'}) + ' WIB'}</p>
                    <hr style="border: 0; border-top: 1px dashed #ddd; margin: 15px 0;">
                    <p><strong>{data.akadPlace}</strong></p>
                    <p style="font-size: 0.85rem;">{data.akadAddress}</p>
                    {data.akadMaps && <a href={data.akadMaps} target="_blank" class="btn-maps"><i class="fas fa-map-marker-alt"></i> Google Maps</a>}
                </div>
            </div>
        </section>

        {data.resepsiDate && (
        <section id="resepsi" class="bg-pattern">
            <div class="container animate-up">
                <div class="event-box">
                    <h2>Resepsi</h2>
                    <p style="font-size: 3rem; margin: 0;">ü•Ç</p>
                    <p style="font-weight: bold; font-size: 1.2rem; margin-top: 10px;">
                        {new Date(data.resepsiDate).toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' })}
                    </p>
                    <p>üïö {data.resepsiTimeManual ? data.resepsiTimeManual : new Date(data.resepsiDate).toLocaleTimeString('id-ID', {hour: '2-digit', minute:'2-digit', timeZone: 'Asia/Jakarta'}) + ' WIB'}</p>
                    <hr style="border: 0; border-top: 1px dashed #ddd; margin: 15px 0;">
                    <p><strong>{data.resepsiPlace}</strong></p>
                    <p style="font-size: 0.85rem;">{data.resepsiAddress}</p>
                    {data.resepsiMaps && <a href={data.resepsiMaps} target="_blank" class="btn-maps"><i class="fas fa-map-marker-alt"></i> Google Maps</a>}
                </div>
            </div>
        </section>
        )}

        {data.gallery && (
        <section id="galeri" class="bg-dark">
            <div class="container animate-up">
                <h2>Galeri</h2>
                <div class="gallery-grid">
                    {data.gallery.map((img: any) => (
                        <img src={urlFor(img).width(300).height(300).url()} class="gallery-img" loading="lazy">
                    ))}
                </div>
                {data.videoLink && <a href={data.videoLink} target="_blank" style="color: var(--gold); margin-top: 20px; display: block;"><u>Tonton Video</u></a>}
            </div>
        </section>
        )}

        {data.loveStory && (
        <section id="story" class="bg-light">
            <div class="container animate-up">
                <h2>Love Story</h2>
                <div class="story-scroll">
                    {data.loveStory.map((item: any) => (
                        <div class="story-item">
                            <span class="story-year">{item.year}</span>
                            <p>{item.story}</p>
                            {item.image && <img src={urlFor(item.image).width(300).url()} style="width: 100%; border-radius: 8px; margin-top: 10px;">}
                        </div>
                    ))}
                </div>
            </div>
        </section>
        )}

        {data.bankAccounts && (
        <section id="gift" class="bg-pattern">
            <div class="container animate-up">
                <h2>Wedding Gift</h2>
                <div class="gift-scroll">
                    <p>Tanpa mengurangi rasa hormat, bagi yang ingin memberikan tanda kasih:</p>
                    
                    {data.bankAccounts.map((bank: any) => (
                        <div class="bank-card">
                            <b style="color: var(--gold-dark);">{bank.bankName}</b>
                            <span class="rek-number">{bank.accountNumber}</span>
                            <small>a.n {bank.accountName}</small> <br>
                            <button class="btn-copy" onclick={`navigator.clipboard.writeText('${bank.accountNumber}').then(()=>alert('Disalin!'))`}>
                                <i class="far fa-copy"></i> Salin
                            </button>
                        </div>
                    ))}

                    {data.giftAddress && (
                        <div class="address-card">
                            <i class="fas fa-box-open" style="font-size: 1.5rem; margin-bottom: 10px; color: var(--gold);"></i>
                            <p style="font-weight: bold; margin: 0 0 5px 0;">Kirim Kado Fisik:</p>
                            <p style="margin:0;">{data.giftAddress}</p>
                        </div>
                    )}
                </div>
            </div>
        </section>
        )}

        <section id="credit" class="bg-dark">
            <div class="container animate-up">
                <p style="font-size: 1.5rem; color: #ccc;">Terima Kasih</p>
                <h1 style="color: var(--gold);">{namaPertama} & {namaKedua}</h1>
                <br><br>
                <small style="opacity: 0.7;">Created with ‚ù§Ô∏è by</small>
                <h3>GORIGU</h3>
            </div>
        </section>

    </div>

    <div class="music-toggle" id="music-btn">
        <i class="fas fa-music"></i>
    </div>

    <nav class="bottom-nav" id="navbar">
        <div class="nav-item" onclick="scrollToSection('cover')"><i class="fas fa-home"></i>Home</div>
        <div class="nav-item" onclick="scrollToSection('ayat')"><i class="fas fa-book-open"></i>Ayat</div>
        
        <div class="nav-item" onclick="scrollToSection('mempelai1')"><i class="fas fa-user"></i>{first.nickname}</div>
        <div class="nav-item" onclick="scrollToSection('mempelai2')"><i class="fas fa-user"></i>{second.nickname}</div>
        
        <div class="nav-item" onclick="scrollToSection('akad')"><i class="fas fa-ring"></i>Akad</div>
        {data.resepsiDate && <div class="nav-item" onclick="scrollToSection('resepsi')"><i class="fas fa-glass-cheers"></i>Resepsi</div>}
        {data.gallery && <div class="nav-item" onclick="scrollToSection('galeri')"><i class="fas fa-images"></i>Galeri</div>}
        {data.loveStory && <div class="nav-item" onclick="scrollToSection('story')"><i class="fas fa-heart"></i>Story</div>}
        {data.bankAccounts && <div class="nav-item" onclick="scrollToSection('gift')"><i class="fas fa-gift"></i>Gift</div>}
        
        <div class="nav-item" onclick="closeInvitation()" style="color: #ff6666;"><i class="fas fa-times-circle"></i>Tutup</div>
    </nav>

    <audio id="bg-music" loop preload="auto">
        <source src={`/music/${data.music || 'default.mp3'}`} type="audio/mpeg">
    </audio>

    <script is:inline define:vars={{ targetDate: data.akadDate }}>
        const params = new URLSearchParams(window.location.search);
        const tamu = params.get('tamu');
        if(tamu) document.getElementById('nama-tamu').innerText = tamu;

        const app = document.getElementById('app');
        const btnOpen = document.getElementById('tombol-buka');
        const navbar = document.getElementById('navbar');
        const musicBtn = document.getElementById('music-btn');
        const audio = document.getElementById('bg-music');
        let isMusicPlaying = false;

        window.scrollToSection = function(id) {
            const el = document.getElementById(id);
            if(el) app.scrollTo({ top: el.offsetTop, behavior: 'smooth' });
        }

        btnOpen.addEventListener('click', () => {
            app.classList.add('unlocked');
            scrollToSection('ayat');
            if(audio) {
                audio.play().then(() => {
                    isMusicPlaying = true;
                    musicBtn.querySelector('i').classList.add('music-icon-spin');
                }).catch(e => console.log(e));
            }
            btnOpen.style.display = 'none';
            navbar.style.opacity = '1'; navbar.style.pointerEvents = 'auto';
            musicBtn.style.opacity = '1'; musicBtn.style.pointerEvents = 'auto';
        });

        window.closeInvitation = function() {
            app.scrollTo({ top: 0, behavior: 'smooth' });
            setTimeout(() => {
                app.classList.remove('unlocked');
                btnOpen.style.display = 'flex';
                navbar.style.opacity = '0'; navbar.style.pointerEvents = 'none';
                musicBtn.style.opacity = '0'; musicBtn.style.pointerEvents = 'none';
                if(audio) {
                    audio.pause(); audio.currentTime = 0; isMusicPlaying = false;
                    musicBtn.querySelector('i').classList.remove('music-icon-spin');
                }
            }, 800);
        }

        musicBtn.addEventListener('click', () => {
            if(isMusicPlaying) {
                audio.pause();
                musicBtn.querySelector('i').classList.remove('music-icon-spin');
                musicBtn.querySelector('i').className = "fas fa-volume-mute";
            } else {
                audio.play();
                musicBtn.querySelector('i').className = "fas fa-music music-icon-spin";
            }
            isMusicPlaying = !isMusicPlaying;
        });

        // Intersection Observer untuk Nav & Animasi Fade Up
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                // 1. Logic Animasi Fade Up
                if (entry.isIntersecting) {
                    entry.target.classList.add('in-view');
                    
                    // 2. Logic Active Nav
                    const id = entry.target.id;
                    const navItems = document.querySelectorAll('.nav-item');
                    navItems.forEach(item => {
                        item.classList.remove('active');
                        if(item.getAttribute('onclick') && item.getAttribute('onclick').includes(`'${id}'`)) {
                            item.classList.add('active');
                            item.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
                        }
                    });
                }
            });
        }, { root: app, threshold: 0.5 });

        document.querySelectorAll('section').forEach(sec => observer.observe(sec));

        // Countdown
        const countDownDate = new Date(targetDate).getTime();
        setInterval(function() {
            const now = new Date().getTime();
            const distance = countDownDate - now;
            if (distance >= 0) {
                document.getElementById("d").innerText = Math.floor(distance / (1000 * 60 * 60 * 24));
                document.getElementById("h").innerText = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                document.getElementById("m").innerText = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                document.getElementById("s").innerText = Math.floor((distance % (1000 * 60)) / 1000);
            }
        }, 1000);
