import { urlFor } from "../../utils/image";

const { data } = Astro.props;

// Logic Data
const isPriaFirst = data.nameOrder !== 'wanitaFirst';
const namaPertama = isPriaFirst ? data.priaNickname : data.wanitaNickname;
const namaKedua = isPriaFirst ? data.wanitaNickname : data.priaNickname;
const tanggalAkad = new Date(data.akadDate).toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' });

// Ambil URL Gambar Cover
const coverUrl = data.coverImage 
  ? urlFor(data.coverImage).width(800).height(1200).url() 
  : 'https://placehold.co/800x1200/333/fff?text=Upload+Cover';

// --- LOGIKA SWAPPING ---
const priaFotoUrl = data.priaFoto ? urlFor(data.priaFoto).width(500).height(500).url() : 'https://placehold.co/500';
const wanitaFotoUrl = data.wanitaFoto ? urlFor(data.wanitaFoto).width(500).height(500).url() : 'https://placehold.co/500';

const groomData = {
    name: data.priaName,
    nickname: data.priaNickname,
    parents: data.priaParents,
    ig: data.priaIg,
    foto: priaFotoUrl,
    label: 'Putra dari' 
};

const brideData = {
    name: data.wanitaName,
    nickname: data.wanitaNickname,
    parents: data.wanitaParents,
    ig: data.wanitaIg,
    foto: wanitaFotoUrl,
    label: 'Putri dari' 
};

const first = isPriaFirst ? groomData : brideData;
const second = isPriaFirst ? brideData : groomData;

const backgroundStyle = `
    background-image: 
    radial-gradient(circle at center, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.8) 60%, rgba(0,0,0,1) 100%),
    linear-gradient(to bottom, rgba(0,0,0,0.2) 0%, rgba(0,0,0,0.9) 100%),
    url('${coverUrl}');
`;
---

<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Wedding of {namaPertama} & {namaKedua}</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;1,400&family=Poppins:wght@300;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* RESET & BASE */
        * { box-sizing: border-box; }
        body { margin: 0; font-family: 'Poppins', sans-serif; background-color: #222; color: #333; overflow: hidden; /* Body selalu hidden, scroll diurus app-container */ }

        /* SCROLL SNAP CONTAINER */
        .app-container {
            height: 100vh;
            height: 100dvh;
            width: 100%;
            overflow-y: hidden; /* DEFAULT: TERKUNCI (Tidak bisa scroll) */
            scroll-snap-type: y mandatory;
            scroll-behavior: smooth;
            position: relative;
            background: #fff;
        }

        /* Class untuk membuka kunci scroll */
        .app-container.unlocked {
            overflow-y: scroll;
        }

        /* SECTION CONFIG */
        section {
            height: 100vh;
            height: 100dvh;
            width: 100%;
            scroll-snap-align: start;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px 20px 80px 20px; 
            position: relative;
            background: white;
            text-align: center;
            overflow: hidden;
        }

        /* THEMES */
        .bg-dark { background: #333; color: white; }
        .bg-light { background: #fffaf0; }
        .bg-pattern { background-color: #ffffff; background-image: radial-gradient(#ddd 1px, transparent 1px); background-size: 20px 20px; }

        .container { max-width: 500px; width: 100%; }

        /* TYPOGRAPHY */
        h1 { font-family: 'Playfair Display', serif; font-size: 3rem; margin: 0; line-height: 1.2; }
        h2 { font-family: 'Playfair Display', serif; font-size: 2rem; margin-bottom: 20px; color: inherit; }
        p { font-size: 0.95rem; line-height: 1.6; margin-bottom: 15px; }

        /* BUTTONS */
        .btn-open { margin-top: 30px; background: white; color: #333; border: none; padding: 12px 30px; border-radius: 50px; font-weight: bold; cursor: pointer; display: flex; align-items: center; gap: 8px; box-shadow: 0 4px 15px rgba(0,0,0,0.3); z-index: 10; transition: all 0.5s; }
        
        /* COUNTDOWN */
        .countdown-box { display: flex; gap: 8px; margin-top: 20px; justify-content: center; }
        .cd-item { background: rgba(0,0,0,0.5); padding: 8px 10px; border-radius: 8px; min-width: 55px; }
        .cd-num { font-size: 1.1rem; font-weight: bold; display: block; }
        .cd-label { font-size: 0.55rem; text-transform: uppercase; }

        /* CARD STYLES */
        .mempelai-img { width: 180px; height: 180px; border-radius: 50%; object-fit: cover; border: 4px solid #ddd; margin-bottom: 20px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); }
        .ig-link { background: #eee; padding: 5px 15px; border-radius: 20px; text-decoration: none; color: #333; font-size: 0.8rem; display: inline-block; margin-top: 10px; }
        .event-box { background: white; padding: 30px; border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.05); width: 100%; border: 1px solid #eee; }
        .btn-maps { background: #333; color: white; padding: 10px 25px; border-radius: 50px; text-decoration: none; display: inline-block; margin-top: 20px; font-size: 0.9rem; }
        .gallery-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 10px; width: 100%; height: 60vh; overflow-y: auto; padding-right: 5px; }
        .gallery-img { width: 100%; height: 150px; object-fit: cover; border-radius: 8px; }
        .story-scroll { height: 60vh; overflow-y: auto; width: 100%; padding: 0 10px; text-align: left; }
        .story-item { border-left: 2px solid #ddd; padding-left: 20px; margin-bottom: 30px; position: relative; }
        .story-item::before { content: ''; position: absolute; left: -6px; top: 0; width: 10px; height: 10px; background: #333; border-radius: 50%; }
        .story-year { font-weight: bold; font-size: 1.2rem; font-family: 'Playfair Display'; display: block; margin-bottom: 5px; }

        /* GIFT */
        .gift-scroll { height: 60vh; overflow-y: auto; width: 100%; padding: 5px; }
        .bank-card { background: #f9f9f9; padding: 20px; border-radius: 12px; border: 1px dashed #ccc; margin-bottom: 15px; }
        .rek-number { font-family: monospace; font-size: 1.2rem; font-weight: bold; margin: 5px 0; display: block; }
        .btn-copy { background: none; border: 1px solid #888; padding: 4px 12px; border-radius: 15px; font-size: 0.8rem; cursor: pointer; }
        .address-card { background: #fffbe6; padding: 20px; border-radius: 12px; border: 1px solid #e6db74; margin-top: 20px; color: #555; font-size: 0.9rem; }

        /* NAVIGATION BAR */
        .bottom-nav {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            width: 90%;
            max-width: 400px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 50px;
            padding: 10px 15px;
            display: flex;
            gap: 20px;
            overflow-x: auto;
            box-shadow: 0 5px 25px rgba(0,0,0,0.15);
            z-index: 100;
            scrollbar-width: none;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.5s;
            border: 1px solid rgba(0,0,0,0.05);
        }
        .bottom-nav::-webkit-scrollbar { display: none; }
        
        .nav-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-width: 60px;
            text-decoration: none;
            color: #aaa;
            font-size: 0.7rem;
            transition: all 0.3s;
            white-space: nowrap;
            flex-shrink: 0;
            cursor: pointer; /* Penting untuk interaksi */
        }
        .nav-item i { font-size: 1.2rem; margin-bottom: 4px; }
        .nav-item.active { color: #333; transform: scale(1.1); font-weight: bold; }

        /* MUSIC TOGGLE FLOATING */
        .music-toggle {
            position: fixed;
            top: 20px;
            right: 20px;
            width: 45px;
            height: 45px;
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(5px);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 200;
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            cursor: pointer;
            border: 1px solid #eee;
            opacity: 0; /* Hidden di awal */
            transition: opacity 0.5s;
            pointer-events: none;
        }
        .music-icon-spin { animation: spin 3s linear infinite; }
        @keyframes spin { 100% { transform: rotate(360deg); } }

        #cover {
            background-size: cover;
            background-position: center center;
            color: white;
            text-shadow: 0 2px 10px rgba(0,0,0,0.5);
            padding-bottom: 20px; 
        }
    </style>
</head>
<body>

    <div class="app-container" id="app">
        
        <section id="cover" style={backgroundStyle}>
            <p style="letter-spacing: 3px; font-size: 0.9rem; margin-bottom: 10px; opacity: 0.9;">THE WEDDING OF</p>
            <h1>{namaPertama}<br><span style="font-size: 2rem; font-style: italic;">&</span><br>{namaKedua}</h1>
            <p style="margin-top: 15px;">{tanggalAkad}</p>

            <div class="countdown-box" id="countdown">
                <div class="cd-item"><span class="cd-num" id="d">0</span><span class="cd-label">Hari</span></div>
                <div class="cd-item"><span class="cd-num" id="h">0</span><span class="cd-label">Jam</span></div>
                <div class="cd-item"><span class="cd-num" id="m">0</span><span class="cd-label">Menit</span></div>
                <div class="cd-item"><span class="cd-num" id="s">0</span><span class="cd-label">Detik</span></div>
            </div>

            <div style="margin-top: 30px; background: rgba(255,255,255,0.15); backdrop-filter: blur(5px); padding: 15px; border-radius: 12px; width: 80%; max-width: 400px;">
                <small>Kepada Yth:</small>
                <h3 id="nama-tamu" style="margin: 5px 0 0 0;">Tamu Undangan</h3>
            </div>

            <button class="btn-open" id="tombol-buka">
                üíå Buka Undangan
            </button>
        </section>

        <section id="ayat" class="bg-pattern">
            <div class="container">
                <i class="fas fa-heart" style="color: #ccc; font-size: 2rem; margin-bottom: 20px;"></i>
                <p style="font-style: italic; font-size: 1.1rem; color: #555;">
                    {data.quote || 'Dan di antara tanda-tanda (kebesaran)-Nya ialah Dia menciptakan pasangan-pasangan untukmu dari jenismu sendiri...'}
                </p>
                <p style="font-weight: bold; margin-top: 10px;">(QS. Ar-Rum: 21)</p>
            </div>
        </section>

        <section id="mempelai1" class="bg-light">
            <div class="container">
                <img src={first.foto} class="mempelai-img" alt={first.name}>
                <h2>{first.nickname}</h2>
                <p style="font-size: 1.2rem; font-weight: bold; margin: 0;">{first.name}</p>
                <p style="color: #777;">{first.label} {first.parents}</p>
                {first.ig && <a href={`https://instagram.com/${first.ig}`} target="_blank" class="ig-link"><i class="fab fa-instagram"></i> @{first.ig}</a>}
            </div>
        </section>

        <section id="mempelai2" class="bg-light">
            <div class="container">
                <img src={second.foto} class="mempelai-img" alt={second.name}>
                <h2>{second.nickname}</h2>
                <p style="font-size: 1.2rem; font-weight: bold; margin: 0;">{second.name}</p>
                <p style="color: #777;">{second.label} {second.parents}</p>
                {second.ig && <a href={`https://instagram.com/${second.ig}`} target="_blank" class="ig-link"><i class="fab fa-instagram"></i> @{second.ig}</a>}
            </div>
        </section>

        <section id="akad" class="bg-pattern">
            <div class="container">
                <div class="event-box">
                    <h2>Akad Nikah</h2>
                    <p style="font-size: 3rem; margin: 0;">üíç</p>
                    <p style="font-weight: bold; font-size: 1.2rem; margin-top: 10px;">
                        {new Date(data.akadDate).toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' })}
                    </p>
                    <p>üïó {data.akadTimeManual ? data.akadTimeManual : new Date(data.akadDate).toLocaleTimeString('id-ID', {hour: '2-digit', minute:'2-digit', timeZone: 'Asia/Jakarta'}) + ' WIB'}</p>
                    <hr style="border: 0; border-top: 1px dashed #ddd; margin: 15px 0;">
                    <p><strong>{data.akadPlace}</strong></p>
                    <p style="font-size: 0.85rem;">{data.akadAddress}</p>
                    {data.akadMaps && <a href={data.akadMaps} target="_blank" class="btn-maps"><i class="fas fa-map-marker-alt"></i> Google Maps</a>}
                </div>
            </div>
        </section>

        {data.resepsiDate && (
        <section id="resepsi" class="bg-pattern">
            <div class="container">
                <div class="event-box">
                    <h2>Resepsi</h2>
                    <p style="font-size: 3rem; margin: 0;">ü•Ç</p>
                    <p style="font-weight: bold; font-size: 1.2rem; margin-top: 10px;">
                        {new Date(data.resepsiDate).toLocaleDateString('id-ID', { weekday: 'long', day: 'numeric', month: 'long', year: 'numeric' })}
                    </p>
                    <p>üïö {data.resepsiTimeManual ? data.resepsiTimeManual : new Date(data.resepsiDate).toLocaleTimeString('id-ID', {hour: '2-digit', minute:'2-digit', timeZone: 'Asia/Jakarta'}) + ' WIB'}</p>
                    <hr style="border: 0; border-top: 1px dashed #ddd; margin: 15px 0;">
                    <p><strong>{data.resepsiPlace}</strong></p>
                    <p style="font-size: 0.85rem;">{data.resepsiAddress}</p>
                    {data.resepsiMaps && <a href={data.resepsiMaps} target="_blank" class="btn-maps"><i class="fas fa-map-marker-alt"></i> Google Maps</a>}
                </div>
            </div>
        </section>
        )}

        {data.gallery && (
        <section id="galeri" class="bg-dark">
            <div class="container">
                <h2>Galeri</h2>
                <div class="gallery-grid">
                    {data.gallery.map((img: any) => (
                        <img src={urlFor(img).width(300).height(300).url()} class="gallery-img" loading="lazy">
                    ))}
                </div>
                {data.videoLink && <a href={data.videoLink} target="_blank" style="color: white; margin-top: 20px; display: block;"><u>Tonton Video</u></a>}
            </div>
        </section>
        )}

        {data.loveStory && (
        <section id="story" class="bg-light">
            <div class="container">
                <h2>Love Story</h2>
                <div class="story-scroll">
                    {data.loveStory.map((item: any) => (
                        <div class="story-item">
                            <span class="story-year">{item.year}</span>
                            <p>{item.story}</p>
                            {item.image && <img src={urlFor(item.image).width(300).url()} style="width: 100%; border-radius: 8px; margin-top: 10px;">}
                        </div>
                    ))}
                </div>
            </div>
        </section>
        )}

        {data.bankAccounts && (
        <section id="gift" class="bg-pattern">
            <div class="container">
                <h2>Wedding Gift</h2>
                <div class="gift-scroll">
                    <p>Tanpa mengurangi rasa hormat, bagi yang ingin memberikan tanda kasih:</p>
                    
                    {data.bankAccounts.map((bank: any) => (
                        <div class="bank-card">
                            <b>{bank.bankName}</b>
                            <span class="rek-number">{bank.accountNumber}</span>
                            <small>a.n {bank.accountName}</small> <br>
                            <button class="btn-copy" onclick={`navigator.clipboard.writeText('${bank.accountNumber}').then(()=>alert('Disalin!'))`}>Salin</button>
                        </div>
                    ))}

                    {data.giftAddress && (
                        <div class="address-card">
                            <i class="fas fa-box-open" style="font-size: 1.5rem; margin-bottom: 10px; color: #d4af37;"></i>
                            <p style="font-weight: bold; margin: 0 0 5px 0;">Kirim Kado Fisik:</p>
                            <p style="margin:0;">{data.giftAddress}</p>
                        </div>
                    )}
                </div>
            </div>
        </section>
        )}

        <section id="credit" class="bg-dark">
            <div class="container">
                <p style="font-size: 1.5rem;">Terima Kasih</p>
                <h1>{namaPertama} & {namaKedua}</h1>
                <br><br>
                <small style="opacity: 0.7;">Created with ‚ù§Ô∏è by</small>
                <h3>GORIGU</h3>
            </div>
        </section>

    </div>

    <div class="music-toggle" id="music-btn">
        <i class="fas fa-music"></i>
    </div>

    <nav class="bottom-nav" id="navbar">
        <div class="nav-item" onclick="scrollToSection('cover')"><i class="fas fa-home"></i>Home</div>
        <div class="nav-item" onclick="scrollToSection('ayat')"><i class="fas fa-book-open"></i>Ayat</div>
        
        <div class="nav-item" onclick="scrollToSection('mempelai1')"><i class="fas fa-user"></i>{first.nickname}</div>
        <div class="nav-item" onclick="scrollToSection('mempelai2')"><i class="fas fa-user"></i>{second.nickname}</div>
        
        <div class="nav-item" onclick="scrollToSection('akad')"><i class="fas fa-ring"></i>Akad</div>
        {data.resepsiDate && <div class="nav-item" onclick="scrollToSection('resepsi')"><i class="fas fa-glass-cheers"></i>Resepsi</div>}
        {data.gallery && <div class="nav-item" onclick="scrollToSection('galeri')"><i class="fas fa-images"></i>Galeri</div>}
        {data.loveStory && <div class="nav-item" onclick="scrollToSection('story')"><i class="fas fa-heart"></i>Story</div>}
        {data.bankAccounts && <div class="nav-item" onclick="scrollToSection('gift')"><i class="fas fa-gift"></i>Gift</div>}
        
        <div class="nav-item" onclick="closeInvitation()" style="color: #ff4444;"><i class="fas fa-times-circle"></i>Tutup</div>
    </nav>

    <audio id="bg-music" loop preload="auto">
        <source src={`/music/${data.music || 'default.mp3'}`} type="audio/mpeg">
    </audio>

    <script is:inline define:vars={{ targetDate: data.akadDate }}>
        // VARIABLE SETUP
        const params = new URLSearchParams(window.location.search);
        const tamu = params.get('tamu');
        if(tamu) document.getElementById('nama-tamu').innerText = tamu;

        const app = document.getElementById('app');
        const btnOpen = document.getElementById('tombol-buka');
        const navbar = document.getElementById('navbar');
        const musicBtn = document.getElementById('music-btn');
        const audio = document.getElementById('bg-music');
        let isMusicPlaying = false;

        // --- FUNGSI SCROLL AMAN (Mencegah Jump) ---
        // Kita menggunakan method khusus ini daripada <a href="#id">
        window.scrollToSection = function(id) {
            const el = document.getElementById(id);
            if(el) {
                // Scroll container, bukan window
                app.scrollTo({
                    top: el.offsetTop,
                    behavior: 'smooth'
                });
            }
        }

        // --- LOGIKA BUKA UNDANGAN ---
        btnOpen.addEventListener('click', () => {
            // 1. Buka Kunci Scroll
            app.classList.add('unlocked');
            
            // 2. Scroll ke Ayat
            scrollToSection('ayat');
            
            // 3. Mainkan Musik
            if(audio) {
                audio.play()
                .then(() => {
                    isMusicPlaying = true;
                    musicBtn.querySelector('i').classList.add('music-icon-spin');
                })
                .catch(e => console.log(e));
            }

            // 4. UI Updates
            btnOpen.style.display = 'none'; // Sembunyikan tombol
            navbar.style.opacity = '1';
            navbar.style.pointerEvents = 'auto';
            musicBtn.style.opacity = '1';
            musicBtn.style.pointerEvents = 'auto';
        });

        // --- LOGIKA TUTUP UNDANGAN ---
        window.closeInvitation = function() {
            // Scroll ke atas
            app.scrollTo({ top: 0, behavior: 'smooth' });
            
            // Tunggu scroll selesai baru kunci (kasar tapi efektif)
            setTimeout(() => {
                app.classList.remove('unlocked'); // Kunci scroll
                btnOpen.style.display = 'flex'; // Munculkan tombol lagi
                navbar.style.opacity = '0';
                navbar.style.pointerEvents = 'none';
                musicBtn.style.opacity = '0';
                musicBtn.style.pointerEvents = 'none';
                
                // Stop Musik
                if(audio) {
                    audio.pause();
                    audio.currentTime = 0;
                    isMusicPlaying = false;
                    musicBtn.querySelector('i').classList.remove('music-icon-spin');
                }
            }, 800);
        }

        // --- LOGIKA MUSIK ON/OFF ---
        musicBtn.addEventListener('click', () => {
            if(isMusicPlaying) {
                audio.pause();
                musicBtn.querySelector('i').classList.remove('music-icon-spin');
                musicBtn.querySelector('i').className = "fas fa-volume-mute";
            } else {
                audio.play();
                musicBtn.querySelector('i').className = "fas fa-music music-icon-spin";
            }
            isMusicPlaying = !isMusicPlaying;
        });

        // --- LOGIKA INTERSECTION OBSERVER (Auto Nav Scroll) ---
        const observerOptions = { root: app, threshold: 0.5 };
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const id = entry.target.id;
                    // Cari tombol nav yang onclick-nya mengandung ID section ini
                    // Selector ini agak trick, mencari elemen nav-item yang function scrollToSection-nya punya parameter id ini
                    const navItems = document.querySelectorAll('.nav-item');
                    navItems.forEach(item => {
                        item.classList.remove('active');
                        if(item.getAttribute('onclick') && item.getAttribute('onclick').includes(`'${id}'`)) {
                            item.classList.add('active');
                            item.scrollIntoView({ behavior: 'smooth', inline: 'center', block: 'nearest' });
                        }
                    });
                }
            });
        }, observerOptions);

        document.querySelectorAll('section').forEach(sec => observer.observe(sec));

        // --- LOGIKA COUNTDOWN (Timezone Fix & Seconds) ---
        const countDownDate = new Date(targetDate).getTime();

        setInterval(function() {
            const now = new Date().getTime();
            const distance = countDownDate - now;

            if (distance >= 0) {
                document.getElementById("d").innerText = Math.floor(distance / (1000 * 60 * 60 * 24));
                document.getElementById("h").innerText = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                document.getElementById("m").innerText = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                document.getElementById("s").innerText = Math.floor((distance % (1000 * 60)) / 1000);
            }
        }, 1000);
    </script>
</body>
</html>